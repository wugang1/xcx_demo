/* pages/seekitem/seekitem.wxss */
.herder{ border-bottom: 1rpx solid #ddd;
  padding-bottom: 20rpx;
  position: fixed;
  width: 100%;
  background:#fff;
 z-index: 999;
}
.search
{
  display: flex;
  flex-direction: row;
  align-items: center;
  width:88%;
  height:60rpx;
  background-color:whitesmoke;
  margin-top: 5%;
  border:1rpx solid whitesmoke;
  border-radius: 50rpx;
  margin-left: 40rpx;
}

/* 搜索框提示文字样式 */
.search input
{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 20rpx;
}

/* 搜索框小图标 */
.search image
{ 
  width:40rpx;
  height:40rpx;
  padding-left: 20rpx;
}
/* 导航 */
.nav{
  width:88%;
  margin:0 auto;
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  margin-top: 10rpx;
}
.nav>view{
  font-size: 30rpx;
}
/* 选中字体样式 */
.fontstyle{
  color:#E31436;
  border-bottom: 1rpx solid #E31436;
  padding-bottom: 10rpx
}
.aa{
   padding-top: 26rpx;
}
.body{
  border-bottom:1rpx solid #ddd;
 
}
.body_item{
  width: 88%;
  margin: 0 auto;
  display: flex;

}
.body_item_left{
    width:50%;
    
}
.body_item_left>image{
  width:100%;
  height: 400rpx;
}
.body_item_right{
width:50%;
padding-left: 20rpx;

}
.yc{
  font-size: 26rpx;
text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 6;
  -webkit-box-orient: vertical;
  margin-top: 10rpx;
}
.btn{
  width:70%;
  padding:18rpx;
  background: #E31436;
  color:#fff;
  text-align: center;
  margin-top: 30rpx;
}